<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter Serial Number"
        android:textAlignment="center"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/sixteen" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etEnterSerialNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_toLeftOf="@+id/btnScan"
        android:background="@drawable/rectangle_edittext"
        android:hint="Enter serial number"
        android:lines="1"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890-"
        android:maxLines="1"
        android:inputType="textCapCharacters"
        android:paddingStart="8dp"
        android:singleLine="true"
        android:textAllCaps="true"
        android:maxLength="14"
        android:textColorHint="@color/colorDarkGrey"
        android:textSize="@dimen/sixteen" />


</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btn_serial_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/round_blue_button"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/sixteen" />

        <Button
            android:id="@+id/btn_serial_okay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/round_blue_button"
            android:text="Set"
            android:textColor="@color/white"
            android:textSize="@dimen/sixteen" />
    </LinearLayout>
</LinearLayout>